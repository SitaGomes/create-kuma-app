{
  "name": "@kuma/storrybook",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./basic": "./src/index.ts"
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "storybook": "concurrently \"pnpm run watch:*\" ",
    "storybook:build": "concurrently \"pnpm run build:*\" ",
    "watch:tailwind": "pnpm dlx tailwindcss -i src/styles/global.css -o src/output.css --watch",
    "watch:storybook": "storybook dev -p 6006",
    "build:tailwind": "pnpm dlx tailwindcss build src/styles/global.css -o src/output.css",
    "build:storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@kuma/eslint-config": "workspace:*",
    "@kuma/tailwind-config": "workspace:*",
    "@kuma/typescript-config": "workspace:*",
    "@kuma/ui": "workspace:*",
    "@storybook/addon-essentials": "^8.2.9",
    "@storybook/addon-interactions": "^8.2.9",
    "@storybook/addon-links": "^8.2.9",
    "@storybook/addon-onboarding": "^8.2.9",
    "@storybook/addon-themes": "^8.2.9",
    "@storybook/blocks": "^8.2.9",
    "@storybook/react": "^8.2.9",
    "@storybook/react-vite": "^8.2.9",
    "@storybook/test": "^8.2.9",
    "@turbo/gen": "^1.12.4",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-storybook": "^0.8.0",
    "storybook": "^8.2.9",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "react": "^18.2.0"
  }
}
