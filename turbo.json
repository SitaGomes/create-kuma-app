{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",

  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["API_ROUTE", "NODE_ENV", "JWT_SECRET"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:backend": {
      "dependsOn": ["^dev:backend"],
      "persistent": true
    },
    "dev:frontend": {
      "dependsOn": ["^dev:frontend"],
      "persistent": true
    }
  }
}
